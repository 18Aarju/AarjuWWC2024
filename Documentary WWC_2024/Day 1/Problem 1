#include <iostream>
using namespace std;

int main() {
    string name, uid, section, areaOfInterest, hometown, dob, aiminlife;
    int age;
    float cgpa;

    cout << "Enter your Name: ";
    getline(cin, name);

    cout << "Enter your UID: ";
    cin >> uid;
    cin.ignore(); 

    cout << "Enter your Section: ";
    getline(cin, section);

    cout << "Enter your Area of Interest (Technical): ";
    getline(cin, areaOfInterest);

    cout << "Enter your Age: ";
    cin >> age;

    cout << "Enter your CGPA: ";
    cin >> cgpa;
    cin.ignore();

    cout << "Enter your Date of Birth (DD/MM/YYYY): ";
    getline(cin, dob);

    cout << "Enter your Hometown: ";
    getline(cin, hometown);
    
    cout << "Aim in Life: ";
    getline(cin, aiminlife);

    cout << "\n=== Academic Bio-Data ===" << endl;
    cout << "Name: " << name << endl;
    cout << "UID: " << uid << endl;
    cout << "Section: " << section << endl;
    cout << "Area of Interest: " << areaOfInterest << endl;
    cout << "Age: " << age << endl;
    cout << "CGPA: " << cgpa << endl;
    cout << "Date of Birth: " << dob << endl;
    cout << "Hometown: " << hometown << endl;
    cout << "Aim in Life: " << aiminlife << endl;

    return 0;
}
